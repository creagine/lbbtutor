<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SiswaActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:contentPadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama siswa" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jurusan" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grade" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hari" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jam" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewNamaSiswa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama" />

                <TextView
                    android:id="@+id/textViewJurusan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jurusan" />

                <TextView
                    android:id="@+id/textViewGrade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grade" />

                <TextView
                    android:id="@+id/textViewHari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hari" />

                <TextView
                    android:id="@+id/textViewJam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jam" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:contentPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Status presensi siswa"
                android:textAlignment="center"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinnerBulan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/bulan" />

            <Button
                android:id="@+id/buttonPekan1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pekan I"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonPekan2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PEKAN II"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonPekan3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PEKAN III"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonPekan4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PEKAN IV"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonPenggantian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PENGGANTIAN"
                android:visibility="gone" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>