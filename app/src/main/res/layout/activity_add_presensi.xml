<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPresensiActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonInputTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="input tanggal" />

        <EditText
            android:id="@+id/editTextMateri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Materi"
            android:inputType="textLongMessage|textMultiLine|textPersonName" />

        <EditText
            android:id="@+id/editTextKeterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Keterangan tidak hadir (optional)"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/spinnerKehadiranSiswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/kehadiranSiswa" />

        <Button
            android:id="@+id/buttonSubmitPresensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>