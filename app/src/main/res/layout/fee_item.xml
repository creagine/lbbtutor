<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:textColor="@color/colorPrimary"
    android:textSize="20sp"
    android:textStyle="bold"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNoFeeItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="no tagihan" />

        <TextView
            android:id="@+id/textViewNamaTutorItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nama tutor" />

        <TextView
            android:id="@+id/textViewNamaSiswaItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nama siswa" />

        <TextView
            android:id="@+id/textViewBulanItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bulan" />

        <TextView
            android:id="@+id/textViewTahunItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tahun" />

        <TextView
            android:id="@+id/textViewJurusanItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="jurusan" />

        <TextView
            android:id="@+id/textViewGradeItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="grade" />

        <TextView
            android:id="@+id/textViewTarifItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tarif" />

        <TextView
            android:id="@+id/textViewFeeItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fee" />

        <TextView
            android:id="@+id/textViewPresensiItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="presensi" />

        <TextView
            android:id="@+id/textViewTglSppItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tanggal spp" />
    </LinearLayout>

</android.support.v7.widget.CardView>