<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/textViewNamaSiswaGantiJadwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Siswa"
            android:textColor="#000000"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="8dp" />

        <TextView
            android:id="@+id/textViewTanggalGantiJadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal" />

        <TextView
            android:id="@+id/textViewJamGantiJadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jam" />

        <TextView
            android:id="@+id/textViewHariGantiJadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hari" />

        <TextView
            android:id="@+id/textViewRuangGantiJadwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ruang"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="8dp" />

        <TextView
            android:id="@+id/textViewStatusGantiJadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status" />

    </LinearLayout>
</android.support.v7.widget.CardView>